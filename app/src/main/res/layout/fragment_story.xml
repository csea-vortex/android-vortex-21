<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/story_layout"
    tools:context="edu.nitt.vortex21.fragments.StoryFragment">

    <ImageView
        android:id="@+id/image_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/vortex_logo"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/reverse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:id="@+id/skip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    
   <edu.nitt.vortex21.storieslibrary.StoriesProgressView
       android:id="@+id/stories_progress"
       android:layout_width="match_parent"
       android:layout_height="10dp"
       android:layout_marginStart="8dp"
       android:layout_marginEnd="8dp"
       android:gravity="top"
       android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/story_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/vortex_logo"/>
        <TextView
            android:id="@+id/story_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vortex"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/story_profile"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>




</RelativeLayout>